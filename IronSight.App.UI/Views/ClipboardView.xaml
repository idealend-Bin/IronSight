<UserControl x:Class="IronSight.App.UI.Views.ClipboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IronSight.App.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,28">
            <TextBlock Text="云端剪贴板" 
                                           FontSize="32" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimary}"/>
            <TextBlock Text="您的剪贴板历史记录，跨设备同步" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,8,0,0"/>
        </StackPanel>

        <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding ClipboardHistory}" 
                                     Background="Transparent" 
                                     BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="0,0,0,12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="ItemBorder" 
                                                            Style="{StaticResource FluentCard}"
                                                            Padding="20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DisplayText}" 
                                                                           FontSize="14" 
                                                                           Foreground="{StaticResource TextPrimary}" 
                                                                           TextTrimming="CharacterEllipsis"
                                                                           FontWeight="Medium"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <TextBlock Text="&#xE823;" 
                                                                               FontFamily="Segoe Fluent Icons" 
                                                                               FontSize="11"
                                                                               Foreground="{StaticResource TextTertiary}"/>
                                                <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                                                               FontSize="12" 
                                                                               Foreground="{StaticResource TextTertiary}" 
                                                                               Margin="6,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <Button Command="{Binding DataContext.CopyClipboardItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                                    CommandParameter="{Binding}"
                                                                    Grid.Column="1"     
                                                                    Content="复制" 
                                                                    Style="{StaticResource SecondaryButton}"/>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</UserControl>
