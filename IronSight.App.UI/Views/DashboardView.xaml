<UserControl x:Class="IronSight.App.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IronSight.App.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource FluentScrollBar}"/>
        </ScrollViewer.Resources>
        <StackPanel>
            <!-- 页面标题 -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="系统监控" 
                                               FontSize="32" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="实时监控您的系统性能与资源使用情况" 
                                               FontSize="14" 
                                               Foreground="{StaticResource TextSecondary}"
                                               Margin="0,8,0,0"/>
            </StackPanel>

            <!-- 状态卡片组 -->
            <UniformGrid Columns="3" Margin="0,0,0,24">
                <!-- CPU卡片 -->
                <Border Style="{StaticResource FluentCard}" Margin="0,0,12,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="36" Height="36" CornerRadius="8" 
                                                            Background="#2060CDFF">
                                    <TextBlock Text="&#xE950;" 
                                                                   FontFamily="Segoe Fluent Icons" 
                                                                   FontSize="16" 
                                                                   Foreground="{StaticResource AccentBrush}"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="CPU 使用率" 
                                                                   Foreground="{StaticResource TextSecondary}" 
                                                                   FontSize="12"/>
                                    <TextBlock Text="处理器" 
                                                                   Foreground="{StaticResource TextTertiary}" 
                                                                   FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                            <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F1}}" 
                                                           FontSize="42" 
                                                           FontWeight="SemiBold" 
                                                           Foreground="{StaticResource TextPrimary}">
                                <Run Text="%" FontSize="24" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </StackPanel>

                        <ProgressBar Grid.Row="2" 
                                                         Value="{Binding CpuUsage}" 
                                                         Style="{StaticResource FluentProgressBar}" 
                                                         Margin="0,16,0,0"/>
                    </Grid>
                </Border>

                <!-- 磁盘读取卡片 -->
                <Border Style="{StaticResource FluentCard}" Margin="6,0,6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="36" Height="36" CornerRadius="8" 
                                                            Background="#206CCB5F">
                                    <TextBlock Text="&#xE896;" 
                                                                   FontFamily="Segoe Fluent Icons" 
                                                                   FontSize="16" 
                                                                   Foreground="{StaticResource SuccessBrush}"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="磁盘读取" 
                                                                   Foreground="{StaticResource TextSecondary}" 
                                                                   FontSize="12"/>
                                    <TextBlock Text="传输速率" 
                                                                   Foreground="{StaticResource TextTertiary}" 
                                                                   FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                            <TextBlock FontSize="42" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}">
                                <Run Text="{Binding DiskReadRate, StringFormat={}{0:F1}}"/>
                                <Run Text="MB/s" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="稳定运行中" 
                                                           FontSize="12" 
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 磁盘写入卡片 -->
                <Border Style="{StaticResource FluentCard}" Margin="12,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="36" Height="36" CornerRadius="8" 
                                                            Background="#20FCE100">
                                    <TextBlock Text="&#xE898;" 
                                                                   FontFamily="Segoe Fluent Icons" 
                                                                   FontSize="16" 
                                                                   Foreground="{StaticResource WarningBrush}"
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="磁盘写入" 
                                                                   Foreground="{StaticResource TextSecondary}" 
                                                                   FontSize="12"/>
                                    <TextBlock Text="传输速率" 
                                                                   Foreground="{StaticResource TextTertiary}" 
                                                                   FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Row="1" Margin="0,20,0,0">
                            <TextBlock FontSize="42" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}">
                                <Run Text="{Binding DiskWriteRate, StringFormat={}{0:F1}}"/>
                                <Run Text="MB/s" FontSize="16" Foreground="{StaticResource TextSecondary}"/>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SuccessBrush}"/>
                            <TextBlock Text="队列正常" 
                                                           FontSize="12" 
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           Margin="8,0,0,0"
                                                           VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- 系统日志卡片 -->
            <Border Style="{StaticResource FluentCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7BA;" 
                                                           FontFamily="Segoe Fluent Icons" 
                                                           FontSize="16" 
                                                           Foreground="{StaticResource AccentBrush}"
                                                           VerticalAlignment="Center"/>
                            <TextBlock Text="系统日志" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="16"
                                                           Foreground="{StaticResource TextPrimary}" 
                                                           Margin="12,0,0,0"/>
                        </StackPanel>
                        <Button Content="清除" 
                                                    Style="{StaticResource SecondaryButton}" 
                                                    HorizontalAlignment="Right"
                                                    Padding="12,6"
                                                    Click="Clear_Click"/>
                    </Grid>

                    <Border Background="#12FFFFFF" CornerRadius="8" Padding="16">
                        <TextBlock Text="{Binding StatusMessage}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       TextWrapping="Wrap" 
                                                       LineHeight="24" 
                                                       FontFamily="Cascadia Code, Consolas, Courier New"
                                                       FontSize="13"/>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
