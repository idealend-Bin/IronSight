<UserControl x:Class="IronSight.App.UI.Views.NetworkMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:IronSight.App.UI.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.DataContext>
        <vm:NetworkMonitorViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="网络监控" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="实时查看系统网络连接与端口状态" Style="{StaticResource PageSubtitle}"/>
        </StackPanel>

        <!-- 工具栏 -->
        <Border Grid.Row="1" 
                Style="{StaticResource FluentCard}"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshCommand}"
                            IsEnabled="{Binding IsNotRefreshing, Mode=OneWay}"
                            Click="OnRefreshClick"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe Fluent Icons" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="刷新"/>
                        </StackPanel>
                    </Button>

                    <ToggleButton Style="{StaticResource FluentToggleButton}"
                                  IsChecked="{Binding IsAutoRefreshEnabled}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE768;" FontFamily="Segoe Fluent Icons" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="自动"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>

                <!-- 中间过滤器 -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <CheckBox Content="TCP"
                              IsChecked="{Binding ShowTcp}"
                              Style="{StaticResource FluentCheckBox}"
                              Margin="0,0,24,0"/>
                    <CheckBox Content="UDP"
                              IsChecked="{Binding ShowUdp}"
                              Style="{StaticResource FluentCheckBox}"/>
                </StackPanel>

                <!-- 右侧搜索框 -->
                <TextBox Grid.Column="2"
                         Width="250"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="搜索进程或地址..."
                         Style="{StaticResource FluentSearchBox}"/>
            </Grid>
        </Border>

        <!-- 刷新间隔设置 -->
        <Border Grid.Row="2"
                Background="{StaticResource CardBackground}"
                CornerRadius="8"
                Padding="16,10"
                Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="刷新间隔:"
                           Foreground="{StaticResource TextSecondary}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <Slider Width="180"
                        Minimum="100"
                        Maximum="5000"
                        Value="{Binding RefreshInterval}"
                        Style="{StaticResource FluentSlider}"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding RefreshInterval, StringFormat={}{0:N0} ms}"
                           Foreground="{StaticResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Width="60"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- 数据表格 -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Connections}"
                  Style="{StaticResource FluentDataGrid}"
                  VirtualizingPanel.IsVirtualizing="True"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.IsDeferredScrollingEnabled="True">
            <DataGrid.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource FluentScrollBar}"/>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource FluentDataGridColumnHeader}"/>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource FluentDataGridRow}"/>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource FluentDataGridCell}"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- 协议 -->
                <DataGridTemplateColumn Header="协议" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Protocol}" Value="TCP">
                                                <Setter Property="Background" Value="#206CCB5F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Protocol}" Value="UDP">
                                                <Setter Property="Background" Value="#20FCE100"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding Protocol}"
                                           FontSize="11"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Protocol}" Value="TCP">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Protocol}" Value="UDP">
                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 本地地址 -->
                <DataGridTextColumn Header="本地地址"
                                    Binding="{Binding LocalAddress}"
                                    Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 本地端口 -->
                <DataGridTextColumn Header="本地端口"
                                    Binding="{Binding LocalPort}"
                                    Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 远程地址 -->
                <DataGridTextColumn Header="远程地址"
                                    Binding="{Binding RemoteAddress}"
                                    Width="140">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 远程端口 -->
                <DataGridTextColumn Header="远程端口"
                                    Binding="{Binding RemotePort}"
                                    Width="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 状态 -->
                <DataGridTemplateColumn Header="状态" Width="110">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,4" HorizontalAlignment="Left">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Established">
                                                <Setter Property="Background" Value="#206CCB5F"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Listening">
                                                <Setter Property="Background" Value="#2060CDFF"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Time Wait">
                                                <Setter Property="Background" Value="#20FCE100"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Close Wait">
                                                <Setter Property="Background" Value="#20FF6B6B"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding State}"
                                           FontSize="11">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Established">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Listening">
                                                    <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Time Wait">
                                                    <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Close Wait">
                                                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- PID -->
                <DataGridTextColumn Header="PID"
                                    Binding="{Binding ProcessId}"
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 进程名 -->
                <DataGridTextColumn Header="进程名称"
                                    Binding="{Binding ProcessName}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 状态栏 -->
        <Border Grid.Row="4"
                Background="{StaticResource SecondaryBackground}"
                CornerRadius="0,0,12,12"
                Padding="16,10"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧统计 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Foreground="{StaticResource TextSecondary}" Margin="0,0,24,0" FontSize="12">
                        <Run Text="总数: "/>
                        <Run Text="{Binding TotalConnectionCount, Mode=OneWay}" Foreground="{StaticResource TextPrimary}"/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource TextSecondary}" Margin="0,0,24,0" FontSize="12">
                        <Run Text="TCP: "/>
                        <Run Text="{Binding TcpConnectionCount, Mode=OneWay}" Foreground="{StaticResource SuccessBrush}"/>
                    </TextBlock>
                    <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12">
                        <Run Text="UDP: "/>
                        <Run Text="{Binding UdpConnectionCount, Mode=OneWay}" Foreground="{StaticResource WarningBrush}"/>
                    </TextBlock>
                </StackPanel>

                <!-- 右侧状态 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRefreshing, Mode=OneWay}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="就绪"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRefreshing, Mode=OneWay}" Value="True">
                                        <Setter Property="Text" Value="刷新中..."/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>