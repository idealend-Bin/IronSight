<UserControl x:Class="IronSight.App.UI.Views.ProcessManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:IronSight.App.UI.ViewModels"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900"
             FontFamily="Segoe UI Variable Display, Segoe UI, sans-serif">

    <Grid>
        <Grid.DataContext>
            <vm:ProcessViewModel/>
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 页面标题 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="进程管理" Style="{StaticResource PageTitle}"/>
            <TextBlock Text="查看与管理系统进程，优化性能" Style="{StaticResource PageSubtitle}"/>
        </StackPanel>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="1" 
                Style="{StaticResource FluentCard}"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Style="{StaticResource FluentSearchBox}"
                         Width="320" 
                         HorizontalAlignment="Left"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="搜索进程名称或 PID..."/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource SecondaryButton}" 
                            ToolTip="刷新" 
                            Padding="10,8"
                            Margin="0,0,8,0">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe Fluent Icons" FontSize="14"/>
                    </Button>

                    <Button Style="{StaticResource DangerButton}"
                            Command="{Binding TerminateProcessCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe Fluent Icons" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="结束进程"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 数据表格 -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding ProcessView}" 
                  SelectedItem="{Binding SelectedProcess}"
                  Style="{StaticResource FluentDataGrid}">
            <DataGrid.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource FluentScrollBar}"/>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource FluentDataGridColumnHeader}"/>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource FluentDataGridRow}">
                    <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=DataGrid}}"/>
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="结束任务" 
                                          InputGestureText="Del"
                                          Command="{Binding PlacementTarget.Tag.TerminateProcessCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                          Foreground="{StaticResource DangerBrush}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xE74D;" FontFamily="Segoe Fluent Icons" Foreground="{StaticResource DangerBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator Style="{StaticResource FluentSeparator}" Margin="0,4"/>
                                <MenuItem Header="设置优先级">
                                    <MenuItem Header="实时" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="Realtime"/>
                                    <MenuItem Header="高" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="High"/>
                                    <MenuItem Header="高于正常" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="AboveNormal"/>
                                    <MenuItem Header="正常" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="Normal"/>
                                    <MenuItem Header="低于正常" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="BelowNormal"/>
                                    <MenuItem Header="低" Command="{Binding PlacementTarget.Tag.SetPriorityCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="Low"/>
                                </MenuItem>
                                <Separator Style="{StaticResource FluentSeparator}" Margin="0,4"/>
                                <MenuItem Header="打开文件所在位置" 
                                          Command="{Binding PlacementTarget.Tag.OpenLocationCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xE8DA;" FontFamily="Segoe Fluent Icons"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="属性" 
                                          Command="{Binding PlacementTarget.Tag.ShowPropertiesCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="&#xE946;" FontFamily="Segoe Fluent Icons"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource FluentDataGridCell}"/>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <!-- PID -->
                <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 进程名 -->
                <DataGridTemplateColumn Header="进程名称" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="24" Height="24" CornerRadius="6" 
                                        Background="#1560CDFF" Margin="0,0,12,0">
                                    <TextBlock Text="&#xE770;" FontFamily="Segoe Fluent Icons" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontSize="12" Foreground="{StaticResource AccentBrush}"/>
                                </Border>
                                <TextBlock Text="{Binding Name}" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- CPU -->
                <DataGridTemplateColumn Header="CPU" Width="100" SortMemberPath="CpuUsage">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F1}%}" 
                                       HorizontalAlignment="Right" 
                                       Margin="0,0,12,0"
                                       FontFamily="Segoe UI Variable Display">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CpuUsage}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource TextDisabled}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 内存 -->
                <DataGridTextColumn Header="内存 (私有)" Binding="{Binding MemoryMB, StringFormat={}{0:N1} MB}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,12,0"/>
                            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 磁盘 -->
                <DataGridTemplateColumn Header="磁盘 (R/W)" Width="140">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,12,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding DiskReadRateMS, StringFormat={}{0:F1}}" 
                                           Foreground="{StaticResource SuccessBrush}" 
                                           HorizontalAlignment="Right"/>
                                <TextBlock Grid.Column="1" 
                                           Text="/" 
                                           Foreground="{StaticResource TextDisabled}" 
                                           Margin="5,0"/>
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding DiskWriteRateMS, StringFormat={}{0:F1}}" 
                                           Foreground="{StaticResource WarningBrush}" 
                                           HorizontalAlignment="Left"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- 句柄 -->
                <DataGridTextColumn Header="句柄" Binding="{Binding HandleCount}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 底部状态栏 -->
        <Border Grid.Row="3" 
                Background="{StaticResource SecondaryBackground}" 
                CornerRadius="0,0,12,12"
                Padding="16,10"
                Margin="0,16,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="&#xE71D;" 
                                   FontFamily="Segoe Fluent Icons" 
                                   Foreground="{StaticResource TextTertiary}" 
                                   Margin="0,1,8,0"/>
                        <TextBlock Text="进程: " 
                                   Foreground="{StaticResource TextSecondary}" 
                                   FontSize="12"/>
                        <TextBlock Text="{Binding ProcessCount}" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   FontWeight="SemiBold" 
                                   Margin="4,0,0,0" 
                                   FontSize="12"/>
                    </StackPanel>

                    <Rectangle Width="1" Height="14" Fill="{StaticResource BorderSubtle}" Margin="0,0,24,0"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="全局句柄: " 
                                   Foreground="{StaticResource TextSecondary}" 
                                   FontSize="12"/>
                        <TextBlock Text="{Binding TotalHandleCount}" 
                                   Foreground="{StaticResource TextPrimary}" 
                                   Margin="4,0,0,0" 
                                   FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="IronSight Monitor" 
                           HorizontalAlignment="Right" 
                           Foreground="{StaticResource TextDisabled}" 
                           FontSize="11" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>